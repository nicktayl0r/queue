extends ../layout

block content
  .login-container.container
    .panel
      .panel-body
        if messages.error
          .alert.alert-danger(role='alert')
            for error in messages.error
              div= error.msg

        form(method='POST')
          legend Create an account
          .form-group
            label(for='name') Name
            input.form-control(type='text', name='name', id='name', placeholder='Name', autofocus=true)
          .form-group
            label(for='email') Email
            input.form-control(type='email', name='email', id='email', placeholder='Email')
          .form-group
            label(for='password') Password
            input.form-control(type='password', name='password', id='password', placeholder='Password')
          .form-group
            label(for='githuburl') GitHub URL
            input.form-control(type='url', name='githuburl', placeholder='https://github.com/user')
          .form-group 
            label(for='cohort') Cohort 
            select.form-control(name='cohort')
              option(default) WDI-DT-X 
              option WDI-DT-57
          button.btn.btn-success(type='submit') Create an account

        .btn-toolbar.text-center

    p.text-center Already have an account?&nbsp;
      a(href='/login')
        strong Log in
